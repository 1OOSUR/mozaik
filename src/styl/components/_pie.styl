.pie
  position relative
  width  100%
  height 100%

  &_chart
    position relative
    float left
    width  60%
    height 100%

  &_legends
    float left
    width  40%
    height 100%
    padding 1vmin 0
    display         flex
    flex-direction  column
    justify-content center

    &_item
      display block
      white-space pre
      margin-bottom 0.6vmin

      &_color
        display inline-block
        width  1.4vmin
        height 1.4vmin
        border-radius 0.7vmin
        margin-right 0.8vmin

  &_overlay
    position absolute
    top  0
    left 0
    width  100%
    height 100%
    display         flex
    align-items     center
    justify-content center

  &_count
    line-height 1em
    text-align center
    &_value
      font-size 6vmin
    &_unit
      font-size 3vmin
    &_label
      display block
      margin-top 1vmin
