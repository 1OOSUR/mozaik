.label
  display inline-block
  padding $label-padding
  background-color $label-bg-color
  color            $label-txt-color
  white-space pre
  border-radius $label-border-radius

  &__group
    display flex

    .label
      border-radius 0

    *
      border-left $label-sep-border

    *:first-child
      border-left 0
      border-radius $label-border-radius 0 0 $label-border-radius

    *:last-child
      border-radius 0 $label-border-radius $label-border-radius 0

    &--full
      display flex
      align-items stretch
      align-content stretch

      .label
        flex-grow 1

  &__addon
    padding $label-padding
    white-space pre
    background-color $label-addon-bg-color
    color            $label-addon-txt-color

    &:first-child
      left 0
      border-right 1px solid $label-sep-color

    &:last-child
      right 0
      border-left 1px solid $label-sep-color
