.time__clock {

  $outer-circle-radius = 75px;
  $inner-circle-radius = 5px;

  &__outer-circle {
    position absolute;

    top  50%;
    left 50%;

    background-color transparent;
    border 2px solid #000;
    
    border-radius $outer-circle-radius;

    width  ($outer-circle-radius * 2);
    height ($outer-circle-radius * 2);

    margin-top  ($outer-circle-radius * -1);
    margin-left ($outer-circle-radius * -1);
  }

  &__inner-circle {
    position absolute;

    top  50%;
    left 50%;

    width  ($inner-circle-radius * 2);
    height ($inner-circle-radius * 2);

    border-radius $inner-circle-radius;

    margin-top  ($inner-circle-radius * -1);
    margin-left ($inner-circle-radius * -1);

    background #000;
  }

  &__brand {
    position absolute;

    top  63%;
    left 0;

    width 100%;

    text-align center;

    font-size 12px;
  }

  &__hand {
    width  64px;
    height 2px;

    margin-top -1px;

    background-color #000;

    position absolute;

    top  50%;
    left 50%;

    transform-origin left center;

    &--hours {
      width: 46px;
    }

    &--seconds {
      height: 1px;
    }
  }
}