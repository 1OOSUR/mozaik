.time__clock {
  background-color $widget-header-bg-color;

  &__outer-circle {
    border 3px solid $widget-header-txt-color;
    background-color $widget-bg-color;
    box-shadow 0 2px 3px rgba(0, 0, 0, 0.15) inset;
  }

  &__inner-circle,
  &__hand {
    background-color $widget-header-icon-color;
  }

  &__brand {
    color $unknown-color;
  }
}