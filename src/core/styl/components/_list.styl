.list {
  list-style: none;

  margin:  0;
  padding: 0;

  &__empty-msg {
    text-align center;
    margin 30px 15px;
  }

  &__item {
    padding: 7px 15px;

    line-height: 24px;

    position: relative;

    &--with-status {

      padding: 7px 15px 7px 35px;

      &:before {
        content: " ";
        display: block;

        width:  12px;
        height: 12px;

        position: absolute;

        top:  15px;
        left: 12px;

        border-radius: 100%;

        background-color: #000;
      }

      &--aborted:before {
        background-color $unknown-color;
      }
      &--ok:before,
      &--passed:before,
      &--success:before {
        background-color $success-color;
      }
      &--warning:before {
        background-color: $warning-color;
      }
      &--critical:before,
      &--failed:before,
      &--failure:before {
        background-color $failure-color;
      }
    }

    &__time {
      font-size: 85%;
      &--inline {
        display: inline-block;
        margin-left: 7px;
      }
    }
  }

  &--compact {
    .list__item {
      padding 5px 15px;
    }
  }
}